<!-- include header file -->
<%- include('common/header'); %>

<!-- page content -->
<div class="contaniner-fluid bg-primary-light-cust">

  <!-- cover image section -->
  <section>
    <img
      src="/images/covers/service.webp"
      alt="our services banner"
      class="w-100"
      height="300px"
    />
  </section>

  <!-- services listing section -->
  <section>
    <div class="container py-5">
      <div class="row">
        <!-- looping in ejs -->
        <% data.services.forEach(function(service){ %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <div class="card-body p-5">
              <!-- conditional statement in ejs -->
              <% if (service.image) { %>
              <img
                src="images/services/<%= service.image %>"
                alt="web development"
                class="mw-100"
              />
              <% }else{ %>
              <img
                src="images/default/default.png"
                alt="web development"
                class="mw-100"
              />
              <% } %>
            </div>
            <div class="card-footer bg-white border-0">
              <h4 class="text-center"><%= service.name %></h4>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </section>
  
</div>

<!-- include footer file -->
<%- include('common/footer'); %>
